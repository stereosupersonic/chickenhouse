!!!
%html{lang: :de}
  %head
    %meta{:name => "viewport", :content => "width=device-width, initial-scale=1.0"}
    %title= content_for?(:title) ? yield(:title) : 'Henaheisl'
    %meta{:name => "description", :content => "#{content_for?(:description) ? yield(:description) : 'Henaheisl'}"}
    = favicon_link_tag 'favicon.ico'
    = stylesheet_link_tag "application", "data-turbo-track": "reload"
    = stylesheet_link_tag "fontawesome", "data-turbo-track": "reload"
    = javascript_include_tag "application", "data-turbo-track": "reload", defer: true
    = csrf_meta_tags
    = csp_meta_tag


  %body{ :id => "#{controller.controller_name}_#{controller.action_name}", :class => "#{controller.controller_name} #{controller.action_name}" }
    #wrap
      %header
        .banner
          = image_tag 'banner_v3.png',:class => 'img-responsive'
          = render 'layouts/navigation'
    .container
      %main{:role => "main"}
        .row
          = render 'layouts/messages'
          .col-sm-9.col-xs-12
            = yield
          .col-sm-3.hidden-xs.float-right
            = render 'layouts/sidebar'
    = auto_discovery_link_tag :atom,  posts_url(:format=>'atom'), :title=>'Henaheisl Blog'

    %footer.footer
