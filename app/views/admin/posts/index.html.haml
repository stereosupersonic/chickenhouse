%h3= "Posts: #{Post.count}"
.panel.pb-3
  = new_button new_admin_post_path

%table.table.table-bordered.table-striped.table-hover
  %thead
    %tr
      %th Name
      %th Intern
      %th Sichtbar
      %th Erstellt
      %th
  %tbody
    - @posts.each do |post|
      %tr{id: dom_id(post)}
        %td= link_to post.title, [ :admin, post ]
        %td= boolean_value post.intern
        %td= boolean_value post.visible
        %td= format_date post.created_at
        %td
          = edit_button edit_admin_post_path(post)
          = delete_button [ :admin, post ]

- if @pagy.pages > 1
  .d-flex.justify-content-center.mt-4
    = raw pagy_bootstrap_nav @pagy

.panel
  = back_button :back
