-# encoding: utf-8
%ol.breadcrumb
  %li= link_to "Home", root_path
  %li= link_to "Administration", admin_root_path
  %li.strong= "Benutzer"
%h3= "Users: #{User.count}"
%table.table.table-bordered.table-striped.table-hover
  %tr
    %th Name
    %th E-Mail
    %th Admin
    %th
    %th
  %tr
    - for user in @users
      %tr
        %td= user.username
        %td= user.email
        %td= boolean_value user.admin?
        %td= edit_button edit_admin_user_path user
        %td= delete_button admin_user_path(user)
.panel
  = new_button new_admin_user_path
  = back_button :back

