-# -*- coding: UTF-8 -*-
%ol.breadcrumb
  %li= link_to 'Home',  root_path
  %li= link_to 'Bilder', bilder_path

.row
  .collection.col-md-3
    = link_to recent_photos_path do
      = image_tag @recent_photo.url_icon, :class => "img-thumbnail img-responsive"
      letzte Bilder

%h3='Alben'
%br
- @collections.in_groups_of(3) do | collections |
  .row
  - collections.compact.each do | collection |
    .collection.col-md-3
      = link_to collection do
        = image_tag collection.iconlarge,  :class => "img-thumbnail img-responsive"
        = collection.name

